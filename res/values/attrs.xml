<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PullToRefresh">
        <attr name="kalaAdapterViewBackground" format="reference|color" />
        <attr name="kalaHeaderBackground" format="reference|color" />
        <attr name="kalaHeaderTextColor" format="reference|color" />
        <attr name="kalaHeaderSubTextColor" format="reference|color" />
        <attr name="kalaHeaderTextSize" format="dimension" />
        <attr name="kalaHeaderSubTextSize" format="dimension" />
        
        <attr name="kalaMode">
            <flag name="disabled" value="0x0" />
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
        <attr name="kalaShowIndicator" format="reference|boolean" />
        <attr name="kalaDrawable" format="reference" />
        <attr name="kalaDrawableTop" format="reference" />
         <attr name="kalaTopProgress" format="reference" />
         <attr name="kalaTopDiviverBackground" format="reference|color" />
        <attr name="kalaDrawableBottom" format="reference" />
        <attr name="kalaOverScroll" format="reference|boolean" />
        <attr name="kalaHeaderTextAppearance" format="reference" />
        <attr name="kalaSubHeaderTextAppearance" format="reference" />
        <attr name="kalaSubHeaderTextType">
            <flag name="format" value="0x0" />
            <flag name="format1" value="0x1" />
        </attr>
        <attr name="kalaAnimationStyle">
            <flag name="rotate" value="0x0" />
            <flag name="flip" value="0x1" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="CircleProgressView">
        <attr name="circleColor" format="color" />
        <attr name="barColor" format="color" />

        <attr name="barLengthRatio" format="dimension" />
        <attr name="padding" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>

</resources>
