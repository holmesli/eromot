<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:gravity="center_vertical"
    android:padding="0.0px" >
    
    <ImageView
        android:id="@+id/megTitleBG"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_gradient" />

    <Button
        android:id="@+id/bar_title_bt_mag"
        android:layout_width="63dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_gradient"
        android:paddingBottom="2dp"
        android:paddingTop="4dp"
        android:tag="1"
        android:text="@string/mag_detail_back"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/btMember"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="96.0dip"
        android:paddingRight="96.0dip"
        android:singleLine="true"
        android:text="@string/mag_content"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bar_title_bt_share"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_alignBaseline="@+id/bar_title_bt_mag"
        android:layout_alignBottom="@+id/bar_title_bt_mag"
        android:layout_alignParentRight="true"
        android:background="@drawable/sharebtn2"
        android:paddingBottom="2dp"
        android:paddingLeft="100dp"
        android:paddingTop="4dp"
        android:tag="2"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:onClick="functionKey" />

</RelativeLayout>