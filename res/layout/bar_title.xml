<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:gravity="center_vertical"
    android:padding="0.0px" >

    <ImageView
        android:id="@+id/rlCommenTitleBG"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_gradient" />


    <ImageButton
        android:id="@+id/ivTitleBtnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:layout_centerVertical="true"
        android:background="@drawable/profile"
        android:gravity="center"
        android:includeFontPadding="false" />

    <ImageButton
        android:id="@+id/ivTitleBtnRigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/post"
        android:gravity="center"
        android:layout_marginRight="5dip"
        android:includeFontPadding="false" />

    <Button
        android:id="@+id/bar_title_bt_duoliao"
        android:layout_width="63dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@+id/ivTitleBtnLeft"
        android:paddingBottom="2dp"
        android:paddingTop="4dp"
        android:tag="1"
        android:text="@string/bar_title_bt_duoliao"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/bar_title_bt_duoyao"
        android:layout_width="63dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/bar_title_bt_duoliao"
        android:paddingBottom="2dp"
        android:paddingTop="4dp"
        android:tag="1"
        android:text="@string/bar_title_bt_duoyao"
        android:textColor="@android:color/white"
        android:textSize="13sp"
         />

</RelativeLayout>