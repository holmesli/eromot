<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:gravity="center_vertical"
    android:padding="0.0px" >

    <ImageView
        android:id="@+id/fansTitleBG"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_gradient" />
    
    
    

    <TextView
        android:id="@+id/btFans"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="96.0dip"
        android:paddingRight="96.0dip"
        android:singleLine="true"
        android:text="@string/bar_title_fans" />
    
        
             <TextView
        android:id="@+id/join_league"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/join"
        android:gravity="end"
		android:textAlignment="gravity"
		android:paddingTop="12.0dip"
		android:paddingRight="4.0dip"
		android:textSize="13sp"
		android:layout_alignParentRight="true"
		android:visibility="invisible"/>

    <Button
        android:id="@+id/bar_title_fans_go_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_back_bg"
        android:layout_marginLeft="5dp"
        android:layout_centerInParent="true"
        android:tag="1" />

</RelativeLayout>